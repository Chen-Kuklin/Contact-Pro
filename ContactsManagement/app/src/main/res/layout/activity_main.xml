<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--    android:text="add_contacts"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="98dp"-->

    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="98dp"-->

    <ImageView
        android:id="@+id/photo_me"
        style="@style/BackGroundImageView"
        android:layout_width="426dp"
        android:layout_height="726dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-8dp" />

    <Button
        android:id="@+id/add_contact_btn"
        android:layout_margin="20dp"
        android:layout_marginTop="16dp"
        android:text="Add a new contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:drawableRight="@android:drawable/ic_menu_add"
        app:layout_constraintEnd_toStartOf="@+id/photo_me"
        app:layout_constraintStart_toEndOf="@+id/photo_me"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_contacts_btn"
        android:layout_margin="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="21dp"
        android:text="Show existing contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:drawableRight="@android:drawable/ic_menu_call"
        app:layout_constraintEnd_toStartOf="@+id/photo_me"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toEndOf="@+id/photo_me"
        app:layout_constraintTop_toBottomOf="@+id/add_contact_btn" />



</androidx.constraintlayout.widget.ConstraintLayout>
